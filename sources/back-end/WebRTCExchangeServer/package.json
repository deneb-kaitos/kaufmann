{
  "name": "@deneb-kaitos/webrtcexchangeserver",
  "version": "0.0.0",
  "description": "WebRTC Exchange Server",
  "engines": {
    "node": "= 15.5.0",
    "pnpm": "= 5.14.1"
  },
  "engineStrict": true,
  "volta": {
    "node": "15.5.0"
  },
  "type": "module",
  "main": "WebRTCExchangeServer.mjs",
  "author": "Dmitry N. Medvedev <dmitry.medvedev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./ --ext .mjs",
    "test": "NODE_OPTIONS='' NODE_V8_COVERAGE=./coverage NODE_ENV=test NODE_DEBUG=specs,uWs,DataProviderClientMachine,DataProviderClient,LibWebRTCExchangeServerSpecMachine,DataConsumerClient ./node_modules/.bin/c8 ./node_modules/.bin/mocha -- --trace-deprecation --prof",
    "coverage": "./node_modules/.bin/c8 report --reporter=text-lcov --reporter=lcov > ./coverage/coverage.lcov && codecov --disable=gcov"
  },
  "dependencies": {
    "nanoid": "^3.1.20",
    "nanoid-dictionary": "^4.1.0",
    "nanoid-generate": "^1.0.0",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v18.11.0",
    "xstate": "^4.15.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "babel-eslint": "^10.1.0",
    "c8": "^7.3.5",
    "chai": "^4.2.0",
    "codecov": "^3.8.1",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.4.0",
    "mocha": "^8.2.1",
    "ws": "^7.4.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.2",
    "utf-8-validate": "^5.0.3"
  },
  "mocha": {
    "allow-uncaught": false,
    "async-only": true,
    "bail": true,
    "check-leaks": true,
    "exit": true,
    "forbid-only": false,
    "forbid-pending": true,
    "slow": 50,
    "timeout": 1000,
    "color": true,
    "diff": true,
    "full-trace": true,
    "growl": false,
    "inline-diffs": true,
    "reporter": "spec",
    "no-config": true,
    "no-opts": true,
    "spec": [
      "**/specs/*.mjs"
    ],
    "require": "./specs/patchGlobalThis.mjs"
  }
}
