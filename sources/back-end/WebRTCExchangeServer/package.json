{
  "name": "@deneb-kaitos/webrtcexchangeserver",
  "version": "0.0.0",
  "description": "WebRTC Exchange Server",
  "engines": {
    "node": "= 15.4.0",
    "pnpm": "= 5.13.6"
  },
  "engineStrict": true,
  "type": "module",
  "main": "WebRTCExchangeServer.mjs",
  "author": "Dmitry N. Medvedev <dmitry.medvedev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./ --ext .mjs",
    "test": "pnpm run lint && NODE_ENV=test NODE_DEBUG=WebRTCExchangeServer ./node_modules/.bin/c8 ./node_modules/.bin/mocha -- --trace-warnings",
    "coverage": "./node_modules/.bin/c8 report --reporter=text-lcov --reporter=lcov > ./coverage/coverage.lcov && codecov --disable=gcov"
  },
  "dependencies": {
    "nanoid": "^3.1.20",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v18.11.0"
  },
  "devDependencies": {
    "c8": "^7.3.5",
    "chai": "^4.2.0",
    "codecov": "^3.8.1",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "mocha": "^8.2.1"
  },
  "mocha": {
    "allow-uncaught": false,
    "async-only": true,
    "bail": true,
    "check-leaks": true,
    "exit": true,
    "forbid-only": false,
    "forbid-pending": true,
    "slow": 50,
    "timeout": 1000,
    "color": true,
    "diff": true,
    "full-trace": true,
    "growl": false,
    "inline-diffs": true,
    "reporter": "spec",
    "no-config": true,
    "no-opts": true,
    "spec": [
      "**/specs/*.mjs"
    ]
  }
}
